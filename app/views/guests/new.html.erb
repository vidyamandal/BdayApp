<%= form_for :guest, url: guests_path do |f| %>
	<h1> BDay App</h1>
	<br><br>
	
	<p>
		<%= f.label :name %><br>
		<%= f.text_field :name %>
	</p>
	
	<p>
		<%= f.label :email %><br>
		<%= f.text_field :email%>
	</p><br>
	
	<p>
		<%= f.radio_button(:attend, "yes") %>
		<%= f.label(:attend_yes, "I will attend") %>
		<br>
		<%= f.radio_button(:attend, "no") %>
		<%= f.label(:attend_no, "Raincheck???") %>
		<br>
	</p>
	<br>
	
	<p>
		<%= f.label :adult, "No of Adults - " %>
		<%= f.number_field :adult %> <br>
		<%= f.label :child, "No of kids - " %>
		<%= f.range_field :child %><br>
	</p>
	<br>
	<br>
		
	<p>
		<%= f.submit %>
	</p>
	
<% end %>
<%= link_to 'List all guests', guests_path %>		
		